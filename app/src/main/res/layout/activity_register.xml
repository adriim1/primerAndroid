<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/registerGLh1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/registerGLh2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/registerGLv1"
        app:layout_constraintGuide_percent="0.2"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/registerGLv2"
        app:layout_constraintGuide_percent="0.8"
        />

    <ImageView
        android:id="@+id/registerLogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/gengar"
        app:layout_constraintTop_toTopOf="@id/registerGLh1"
        app:layout_constraintEnd_toEndOf="@id/registerGLv2"
        app:layout_constraintStart_toStartOf="@id/registerGLv1"
        app:layout_constraintBottom_toBottomOf="@id/registerGLh2"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/registerTILuserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Username"
        app:startIconDrawable="@drawable/ic_person"
        app:layout_constraintTop_toBottomOf="@id/registerLogo"
        app:layout_constraintStart_toStartOf="@id/registerGLv1"
        app:layout_constraintEnd_toEndOf="@id/registerGLv2"
        app:layout_constraintVertical_chainStyle="packed">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/registerTILEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Email"
        app:startIconDrawable="@drawable/ic_email"
        app:layout_constraintTop_toBottomOf="@+id/registerTILuserName"
        app:layout_constraintStart_toStartOf="@id/registerGLv1"
        app:layout_constraintEnd_toEndOf="@id/registerGLv2">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/registerTILpassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Password"
        app:passwordToggleEnabled="true"
        app:startIconDrawable="@drawable/ic_key"
        app:layout_constraintTop_toBottomOf="@+id/registerTILEmail"
        app:layout_constraintStart_toStartOf="@id/registerGLv1"
        app:layout_constraintEnd_toEndOf="@id/registerGLv2">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/registerTILconfirmPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Repeat Password"
        app:passwordToggleEnabled="true"
        app:startIconDrawable="@drawable/ic_key"
        app:layout_constraintTop_toBottomOf="@+id/registerTILpassword"
        app:layout_constraintStart_toStartOf="@id/registerGLv1"
        app:layout_constraintEnd_toEndOf="@id/registerGLv2">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Register"
        app:layout_constraintTop_toBottomOf="@+id/registerTILconfirmPassword"
        app:layout_constraintStart_toStartOf="@id/registerGLv1"
        app:layout_constraintEnd_toEndOf="@id/registerGLv2" />

</androidx.constraintlayout.widget.ConstraintLayout>